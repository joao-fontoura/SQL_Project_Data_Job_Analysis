SELECT 
    skills,
    ROUND(AVG(salary_year_avg),0) AS demand_salary
FROM skills_dim
INNER JOIN skills_job_dim ON skills_job_dim.skill_id = skills_dim.skill_id
INNER JOIN job_postings_fact ON job_postings_fact.job_id = skills_job_dim.job_id
WHERE job_title_short = 'Data Analyst' AND salary_year_avg IS NOT NULL
AND (job_work_from_home = TRUE OR job_country = 'Portugal')
GROUP BY
    skills
ORDER BY
    demand_salary DESC
LIMIT 25

SELECT 
    skills,
    ROUND(AVG(salary_year_avg),2) AS demand_salary
FROM skills_dim
INNER JOIN skills_job_dim ON skills_job_dim.skill_id = skills_dim.skill_id
INNER JOIN job_postings_fact ON job_postings_fact.job_id = skills_job_dim.job_id
WHERE job_title_short = 'Data Analyst' AND salary_year_avg IS NOT NULL
AND job_work_from_home = TRUE
GROUP BY
    skills
ORDER BY
    demand_salary DESC
LIMIT 25